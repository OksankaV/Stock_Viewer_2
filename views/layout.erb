		<style>
   		body {
			font-family: Verdana,Arial,Geneva,Helvetica,sans-serif;
			font-size: 12px;
    	}
    	.price_link {
			font-weight: bold;
    	}
		.brand {text-transform: uppercase;}
		</style>
		
		<%= yield_content :head %>
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="/">vsikolesa</a>
					<div class="pull-left">
						<ul class="nav">
							<li><a href='/' class="price_link">Каталог шин</a></li>
							<li><p class="navbar-text"><%=$price_date%></p></li>
							
							<li class="dropdown">
				              <a id="dropdown_download_price" href="#" role="button" class="dropdown-toggle price_link" data-toggle="dropdown">Скачати прайс<b class="caret"></b></a>
				              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown_download_price">
				                <li role="presentation"><a role="menuitem" tabindex="-1" href="http://yadi.sk/d/fYEiCQeQ7T35d" target="_blank">Старий формат (XLS)</a></li>
