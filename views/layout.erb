							<%if @admin_login == true%>
								<li><a id="show_columns">Неповний каталог</a></li>
							<%end%>
							<li><a href='/logout'>Вийти <strong><%=settings.username%></strong></a></li>
						<%else%>
							<li><a href='/login_form'>Увійти</a></li>
						<%end%> 	
						</ul>	
					</div>
				</div>
			</div>	
		</div>
		<div class="container">
			<%= yield%>
		</div>
